<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        body {
            margin: 0;
            padding: 0;
            opacity: 80%;
        }

        .button-9 {
            appearance: button;
            backface-visibility: hidden;
            background-color: #00e676;
            border-radius: 6px;
            border-width: 0;
            box-shadow: rgba(50, 50, 93, .1) 0 0 0 1px inset, rgba(50, 50, 93, .1) 0 2px 5px 0, rgba(0, 0, 0, .07) 0 1px 1px 0;
            box-sizing: border-box;
            color: #fff;
            cursor: pointer;
            font-family: -apple-system, system-ui, "Segoe UI", Roboto, "Helvetica Neue", Ubuntu, sans-serif;
            font-size: 100%;
            height: 44px;
            line-height: 1.15;
            margin: 12px 0 0;
            outline: none;
            overflow: hidden;
            padding: 0 25px;
            position: relative;
            text-align: center;
            text-transform: none;
            transform: translateZ(0);
            transition: all .2s, box-shadow .08s ease-in;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            width: 40%;
            display: block;
            margin: 0 auto;
        }

        .button-9:disabled {
            cursor: default;
        }

        .button-9:focus {
            box-shadow: rgba(50, 50, 93, .1) 0 0 0 1px inset, rgba(50, 50, 93, .2) 0 6px 15px 0, rgba(0, 0, 0, .1) 0 2px 2px 0, rgba(50, 151, 211, .3) 0 0 0 4px;
        }

        .home {
            background-image: url(bimageqi.avif);
            height: 100vh;
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            border-left: 50%;
            border-radius: 15px;
            padding: .5em;
            background-color: rgba(0, 0, 0, 0.9);
            margin: 15px;
            display: flex;
            align-items: center;
            /* justify-content: space-around; */
            width: 400px;
            opacity: 90%;
        }

        input {
            background: transparent;
            border: none;
            outline: none;
            font-size: larger;
            color: #00e676;
        }

        input:focus {
            border: none;
        }

        span {
            margin-right: 10px;
            /* color: #00e676; */
            color: #fff;
        }

        #pass-visibility {
            margin-left: 70px;
            cursor: pointer;
        }

        #login-pass-visibility {
            margin-left: 70px;
            cursor: pointer;
        }

        .title h1 {
            text-align: center;
            /* color: #00e676; */
            margin: 1em;
            color: #fff;
        }

        #register {
            color: #00e676;
            cursor: pointer;
        }


        #login-link {
            color: #00e676;
            cursor: pointer;
        }

        .links {
            text-align: center;
        }

        h3 {
            color: #fff;
        }

        .login {
            display: none;
            background-color: rgba(0, 0, 0, 0.4);
            border-radius: 8px;
        }

        .signup {
            background-color: rgba(0, 0, 0, 0.4);
            border-radius: 8px;
        }

        @media screen and (max-width: 600px) {
            .home {
                background-image: url(bimageq.jpg);
                background-size: cover;
                background-position: center;
                justify-content: flex-start;
                align-items: flex-start;
                padding: 20px;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .container {
                width: 90%;
                margin: 10px;
                background-color: rgba(0, 0, 0, 0.8);
            }

            #pass-visibility {
                margin-left: -30px;
                cursor: pointer;
            }

            #login-pass-visibility {
                margin-left: 0px;
                cursor: pointer;
            }

            span {
                margin-right: 10px;
                color: #fff;
            }


        }

        select {
            background: transparent;
            border: none;
            outline: none;
            font-size: larger;
            color: #00e676;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="home">
        <div class="signup" id="signup">
            <div class="title">
                <h1>ADMIN</h1>
            </div>
            <div class="container">
                <span class="material-symbols-outlined">
                    person
                </span>
                <input type="text" name="name" id="name-field" placeholder="Name">
            </div>
            <div class="container">
                <span class="material-symbols-outlined">
                    call
                </span>
                <input type="tel" name="telephne" id="phone-field" placeholder="Phone number">
            </div>
            <div class="container">
                <span class="material-symbols-outlined">
                    mail
                </span>
                <input type="email" name="signup-email" id="signup-email-field" placeholder="Organisation email address">
            </div>
            <div class="container">
                <span class="material-symbols-outlined">
                    corporate_fare
                </span>
                <input type="text" name="organisation-name" id="org-name-field" placeholder="Organisation name">
            </div>
            <div class="container">
                <span class="material-symbols-outlined">
                    settings
                </span>
                <select name="role" id="role">
                    <option value="admin">Administrative admin</option>
                    <option value="supervisor">Supervisor</option>
                </select>
            </div>
            <div class="container">
                <span class="material-symbols-outlined">
                    lock
                </span>
                <input type="password" name="signup-password" id="signup-pass-field" placeholder="Password">
                <span class="material-symbols-outlined" id="pass-visibility">
                    visibility
                </span>
            </div>
            <div class="links">
                <button class="button-9" role="button" id="register-btn">Register</button>
                <h3>Already have an account? <span id="login-link">Login</span></h3>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', async function () {
            const toggleVisibility = document.getElementById('pass-visibility');
            const signupPassword = document.getElementById('signup-pass-field');
            const registerLink = document.getElementById('login-link');
            const registerBtn = document.getElementById('register-btn');

            registerLink.addEventListener('click', async (e) => {
                e.preventDefault();
               window.location.href ='/admin'
            });


            registerBtn.addEventListener('click', async (e) => {
                e.preventDefault();
                const adminName = document.getElementById("name-field").value.trim();
                const adminPhone = document.getElementById('phone-field').value.trim();
                const signupEmail = document.getElementById("signup-email-field").value.trim();
                const organisationName = document.getElementById('org-name-field').value.trim();
                const adminRole = document.getElementById("role").value.trim();
                const signupPasswordValue = document.getElementById("signup-pass-field").value.trim();

                if (adminName === "" || adminPhone === "" || adminRole === "" || organisationName === "" || signupEmail === "" || signupPasswordValue === "") {
                    alert("All fields are required");
                } else {
                    try {
                        const data = {
                            adminName: adminName,
                            adminPhone: adminPhone,
                            signupEmail: signupEmail,
                            organisationName: organisationName,
                            adminRole: adminRole,
                            signupPassword: signupPasswordValue,
                        };

                        console.log(data);
                        const response = await fetch('/admin-registration', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(data),
                        });

                        if (response.ok) {
                            // Redirect based on the selected role
                            if (adminRole === "admin") {
                                window.location.href = "/admin";
                            } else if (adminRole === "supervisor") {
                                window.location.href = "/admin"; 
                            } else {
                                alert("Unknown role. Select a valid role");
                            }
                        } else {
                            throw new Error('Failed to register');
                        }
                    } catch (error) {
                        console.error("Error processing data:", error);
                        alert("An error occurred. Please try again later.");
                    }
                }
            });

            toggleVisibility.addEventListener('click', async (e) => {
                e.preventDefault();
                // loginPassword.type = loginPassword.type === 'password' ? 'text' : 'password';
                signupPassword.type = signupPassword.type === 'password' ? 'text' : 'password';
            });
        });
    </script>
</body>

</html>